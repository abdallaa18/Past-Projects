<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#121212">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <ImageView
                android:id="@+id/friendImage"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/avatar"
                android:padding="4dp" />

            <TextView
                android:id="@+id/friendName"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@id/friendImage"
                android:text="firstName"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/friendUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/friendName"

                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="120dp"
                android:text="UserName"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#FE9900"
                android:textSize="10dp" />

            <Button
                android:id="@+id/viewEventButton"
                android:layout_width="119dp"
                android:layout_height="53dp"
                android:layout_below="@id/friendUserName"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="26dp"

                android:layout_marginTop="-13dp"
                android:layout_marginBottom="6dp"
                android:layout_toRightOf="@id/friendImage"
                android:drawableLeft="@drawable/ic_view_stream_black_24dp"
                android:text="View Events" />

            <Button
                android:id="@+id/removeFriendButton"
                android:layout_width="119dp"
                android:layout_height="53dp"
                android:layout_below="@id/friendUserName"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="31dp"

                android:layout_marginTop="-13dp"
                android:layout_marginBottom="6dp"
                android:layout_toRightOf="@id/viewEventButton"
                android:drawableLeft="@drawable/ic_delete_black_24dp"
                android:text="Remove Friend" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>