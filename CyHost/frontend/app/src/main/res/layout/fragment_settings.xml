<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#000000"
    >

    <Button
        android:id="@+id/deleteEvents"
        style="@style/AppTheme.RoundedCornerMaterialButton"

        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="97dp"
        android:drawableLeft="@drawable/ic_view_stream_black_24dp"
        android:paddingStart="10dp"
        android:text="Delete Events"
        android:visibility="gone"

        android:textColor="#000000" />

    <Button
        android:id="@+id/deleteUsers"
        style="@style/AppTheme.RoundedCornerMaterialButton"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
    android:paddingStart="10dp"
        android:layout_marginStart="220dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="97dp"
        android:layout_toEndOf="@id/deleteEvents"
        android:drawableLeft="@drawable/ic_group_black_24dp"
        android:text="Delete Users"
        android:visibility="gone"
        android:textColor="#000000" />

    <Button
        android:id="@+id/logOut"
        style="@style/AppTheme.RoundedCornerMaterialButton"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:text="Log Out"
        android:textColor="#000000"
        android:drawableLeft="@drawable/ic_power_settings_new_black_24dp"/>

</RelativeLayout>